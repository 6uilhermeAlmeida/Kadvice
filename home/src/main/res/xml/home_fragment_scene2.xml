<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/pgbar_home">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/tv_home">
            <PropertySet android:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/iv_dim_home">
            <PropertySet android:alpha="0.8" />
        </Constraint>

        <Constraint android:id="@+id/iv_bg_home">
            <Transform android:scaleY="1.1"
                android:scaleX="1.1" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/loading">
        <Constraint
            android:id="@+id/tv_refresh_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/guideline">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@id/tv_home">
            <Transform android:translationY="-50dp" />
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/iv_dim_home">
            <PropertySet android:alpha="0.5" />
        </Constraint>

        <Constraint android:id="@+id/iv_bg_home">
            <Transform android:scaleY="1"
                android:scaleX="1" />
        </Constraint>
    </ConstraintSet>

    <Transition
        android:id="@+id/startToLoading"
        motion:constraintSetEnd="@+id/loading"
        motion:constraintSetStart="@+id/start"
        motion:duration="500">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="37"
                motion:motionTarget="@id/pgbar_home" />
        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:onTouchUp="decelerateAndComplete" />
    </Transition>
</MotionScene>