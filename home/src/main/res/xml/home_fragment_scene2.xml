<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/pgbar_home">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/tv_home">
            <PropertySet android:alpha="1" />
        </Constraint>

        <Constraint android:id="@+id/iv_dim_home">
            <PropertySet android:alpha="0.8" />
        </Constraint>

        <Constraint android:id="@+id/iv_bg_home">
            <Transform
                android:scaleX="1.1"
                android:scaleY="1.1" />
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/loading">
        <Constraint
            android:id="@+id/tv_refresh_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/guideline">
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@id/tv_home">
            <Transform android:translationY="-50dp" />
            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@+id/iv_dim_home">
            <PropertySet android:alpha="0.5" />
        </Constraint>

        <Constraint android:id="@+id/iv_bg_home">
            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <Transition
        android:id="@+id/startToLoading"
        motion:constraintSetEnd="@+id/loading"
        motion:constraintSetStart="@+id/start"
        motion:duration="300">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:dragScale="5"
            motion:onTouchUp="decelerateAndComplete" />
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="80"
                motion:motionTarget="@+id/pgbar_home" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/initial_loading">
        <Constraint
            android:id="@+id/tv_refresh_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@+id/iv_bg_home">
            <PropertySet android:alpha="0" />
        </Constraint>
        <Constraint
            android:id="@+id/pgbar_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/tv_refresh_home" />
    </ConstraintSet>
    <Transition
        android:id="@+id/initToStart"
        motion:constraintSetStart="@+id/initial_loading"
        motion:constraintSetEnd="@+id/start" />
</MotionScene>